<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/frameLayout">

    <TextView
            android:id="@+id/skyConPic_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:text="Tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_textView" android:textSize="24sp"
            android:layout_toEndOf="@+id/skyConPic_textView"
            android:layout_toRightOf="@+id/skyConPic_textView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"/>
    <TextView
            android:text="23°C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tmp_max" android:textSize="24sp"
            android:layout_alignEnd="@+id/tmp_min"
            android:layout_alignRight="@+id/tmp_min"
            android:layout_alignTop="@+id/date_textView"/>
    <TextView
            android:text="14°C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tmp_min" android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_alignTop="@+id/skyCon"/>
    <TextView
            android:text="cloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/skyCon"
            android:textSize="24sp"
            android:layout_toEndOf="@+id/skyConPic_textView"
            android:layout_toRightOf="@+id/skyConPic_textView"
            android:layout_alignParentTop="true" android:layout_marginTop="59dp"/>
</RelativeLayout>