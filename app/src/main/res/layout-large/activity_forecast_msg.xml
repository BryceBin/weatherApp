<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".forecastMsg">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/skyCon_msg" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/weather_msg"/>
    <TextView
            android:text="11月30日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_msg" android:textSize="18sp"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toStartOf="@+id/skyCon_msg"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="31dp" android:layout_marginStart="31dp" android:layout_marginEnd="122dp"
            android:layout_marginRight="122dp"/>
    <TextView
            android:text="星期五"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weekday_msg" android:textSize="18sp"
            android:layout_marginTop="13dp" app:layout_constraintTop_toBottomOf="@+id/date_msg"
            app:layout_constraintEnd_toStartOf="@+id/skyCon_msg" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="39dp" android:layout_marginStart="39dp" android:layout_marginEnd="136dp"
            android:layout_marginRight="136dp"/>
    <TextView
            android:text="10°C~20°C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temperature_msg" android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="31dp" android:layout_marginTop="252dp" android:layout_marginStart="31dp"/>
    <TextView
            android:text="西北风1-2级"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wind_msg" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/temperature_msg" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/temperature_msg"/>
    <TextView
            android:text="相对湿度：37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hum_msg" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/wind_msg" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/wind_msg"/>
    <TextView
            android:text="气压：1018Kpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pres_msg" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            android:layout_marginLeft="31dp" android:layout_marginStart="31dp"
            app:layout_constraintTop_toBottomOf="@+id/hum_msg"/>
    <TextView
            android:text="能见度：10km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vis_msg" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginLeft="31dp" android:layout_marginStart="31dp"
            app:layout_constraintTop_toBottomOf="@+id/pres_msg"/>
    <TextView
            android:text="晴"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weather_msg" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/weekday_msg" app:layout_constraintEnd_toStartOf="@+id/skyCon_msg"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp" android:layout_marginEnd="133dp" android:layout_marginRight="133dp"
            android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>